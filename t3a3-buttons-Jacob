<input type=button value="first click" onclick="{
   alert('Giddy up partner')
}"><br>

<input type=text id="myText01" value="Jacob"><br>
<textarea id="myArea01" rows=4 cols=70></textarea><br>

<input type=button value="Input/Output" onclick="{
  document.all.myArea01.value = document.all.myText01.value
}">

<input type=button value="Variables" onclick="{
   myX = 3
   myWord = 'Flamingo'
  // myArray[3] = 'Super'
   document.all.myArea01.value = '3 + 3 = ' + myX * myX
   
}">

<input type=text id="myText02" value=5>
<input type=button value="Variables 2" onclick="{
   myX = document.all.myText02.value
   document.all.myArea01.value = myX + ' x 3 = " + myX * myX

<input type=button value="Loop" onclick="{
   for (myLoop = 1;  myLoop <= 3; myLoop++){
    alert('loop '+ myLoop)
  }
}">

<input type=button value="Decision" onclick="{
   myX = 3
   if (myX == 3){
     document.all.myArea01.value = 'Yes myX does equal 3. It is ' + myX
   } else {
         document.all.myArea01.value = 'No myX was ' + myX
   } 
}">

<script>
function myFun(){
   document.all.myArea01.value = myPass + ' a function called myFun()'
}

</script>

<input type=button value="Functions" onclick="{
   myPass = 'Really not fun'
   myFun(myPass)
}">



